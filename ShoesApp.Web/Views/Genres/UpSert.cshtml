@model GenreEditVm
@{
    ViewData["Title"] = "New/Edit Genre";
}
<form method="post" asp-action="UpSert" class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="GenreId" />

    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@(Model.GenreId == 0 ? "Add Genre" : "Edit Genre")</h2>

        </div>
        <div class="form-group row py-2">
            <label asp-for="GenreName"></label>
            <input asp-for="GenreName" class="form-control" />
            <span asp-validation-for="GenreName" class="text-danger"></span>

        </div>
        <div class="form-check">
            <input asp-for="Active" class="form-check-input" type="checkbox">
            <label class="form-check-label" asp-for="Active">

            </label>
        </div>
        @if (Model.GenreId == 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2-fill"></i>
                Create
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Edit
            </button>

        }
        <a asp-action="Index" class="btn btn-success btn-block">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>


    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
